mixin icon(name,mod)
    if(mod)
        svg(class="svg-sprite-icon icon-" + name + ' ' + mod)
            use(xlink:href="static/images/svg/symbol/sprite.svg#" + name)
    else
        svg(class="svg-sprite-icon icon-" + name)
            use(xlink:href="static/images/svg/symbol/sprite.svg#" + name)

mixin social-icons
    a.social__item(href="#")
        svg(class="social__icon")
            use(xlink:href="static/images/svg/symbol/sprite.svg#behance")
    a.social__item(href="#")
        svg(class="social__icon")
            use(xlink:href="static/images/svg/symbol/sprite.svg#dribbble")
    a.social__item(href="#")
        svg(class="social__icon")
            use(xlink:href="static/images/svg/symbol/sprite.svg#facebook")
    a.social__item(href="#")
        svg(class="social__icon")
            use(xlink:href="static/images/svg/symbol/sprite.svg#instagram")
